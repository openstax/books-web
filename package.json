{
  "name": "books-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cnx-recipes": "github:connexions/cnx-recipes#master",
    "history": "^4.7.2",
    "lodash": "^4.17.11",
    "path-to-regexp": "^2.4.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.0",
    "react-scripts": "2.1.1",
    "redux": "^4.0.1",
    "reselect": "^4.0.0",
    "styled-components": "^4.0.3",
    "typesafe-actions": "^2.0.4",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "lint": "tslint -p ./tsconfig.json",
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=true react-scripts build",
    "server": "node server/cli --fallback404",
    "codecov": "codecov",
    "postinstall": "node ./script/postinstall",
    "test": "npm run-script test:unit && npm run-script lint && npm run-script test:sourcemap",
    "test:unit": "jest --coverage",
    "test:sourcemap": "node ./script/verifySourcemaps.js",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@openstax/types": "^1.0.2",
    "@types/cross-spawn": "^6.0.0",
    "@types/history": "^4.7.2",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.117",
    "@types/node": "^10.12.2",
    "@types/puppeteer": "^1.10.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.9",
    "@types/react-test-renderer": "^16.0.3",
    "@types/styled-components": "^4.0.3",
    "babel-core": "7.0.0-bridge.0",
    "codecov": "^3.1.0",
    "cross-spawn": "^6.0.5",
    "glob": "^7.1.3",
    "jest-puppeteer": "^3.5.1",
    "pify": "^4.0.1",
    "portfinder": "^1.0.19",
    "puppeteer": "^1.10.0",
    "react-test-renderer": "^16.6.1",
    "serve-handler": "^5.0.5",
    "tslint": "^5.11.0",
    "yargs": "^12.0.2"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)((browser)?spec))\\.(ts|js)x?$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/react-scripts/config/jest/babelTransform.js"
    },
    "collectCoverageFrom": [
      "src/{app,helpers}/**/*.{ts,tsx}"
    ]
  }
}
