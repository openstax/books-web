{
  "name": "books-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "cnx-recipes": "github:connexions/cnx-recipes#master",
    "history": "^4.7.2",
    "lodash": "^4.17.11",
    "path-to-regexp": "^2.4.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.0",
    "react-scripts": "2.1.1",
    "redux": "^4.0.1",
    "reselect": "^4.0.0",
    "styled-components": "^4.0.3",
    "typesafe-actions": "^2.0.4",
    "typescript": "^3.2",
    "weak-map": "^1.0.5"
  },
  "scripts": {
    "lint": "tslint -p ./tsconfig.json",
    "start": "react-scripts start",
    "start:static": "export REACT_APP_ENV=${REACT_APP_ENV:-test} && npm run-script build && npm run-script prerender && npm run-script server",
    "clean": "rm -rf ./build",
    "build": "export REACT_APP_ENV=${REACT_APP_ENV:-production} && GENERATE_SOURCEMAP=${GENERATE_SOURCEMAP:-true} react-scripts build",
    "build:clean": "npm run-script clean && npm run-script build",
    "prerender": "REACT_APP_ENV=${REACT_APP_ENV:-production} node ./script/entry prerender",
    "server": "REACT_APP_ENV=${REACT_APP_ENV:-development} node ./script/entry server/cli",
    "codecov": "codecov",
    "postinstall": "node ./script/postinstall",
    "test": "npm run-script test:unit && npm run-script lint && npm run-script test:build && tsc",
    "test:unit": "REACT_APP_ENV=test jest --coverage --testPathPattern=\"(\\.|/)(browser)?spec\\.tsx?\"",
    "test:build": "REACT_APP_ENV=test npm run-script build:clean && npm run-script test:sourcemap && npm run-script test:prerender",
    "test:sourcemap": "REACT_APP_ENV=test node ./script/verifySourcemaps.js",
    "test:prerender": "export REACT_APP_ENV=test && npm run-script prerender && SERVER_MODE=built jest --testPathPattern=\"(\\.|/)(prerender|browser)spec\\.tsx?\"",
    "test:lighthouse-manual": "REACT_APP_ENV=test lighthouse --view --config-path=./src/test/audits/index.js",
    "heroku-postbuild": "npm run-script build:clean && npm run-script prerender && cp build/books/college-physics/pages/1-Introduction-to-Science-and-the-Realm-of-Physics-Physical-Quantities-and-Units build/index.html"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@openstax/types": "^1.0.2",
    "@types/express": "^4.16.0",
    "@types/history": "^4.7.2",
    "@types/jest": "^23.3.9",
    "@types/jest-image-snapshot": "^2.4.0",
    "@types/lodash": "^4.14.117",
    "@types/node": "^10.12.2",
    "@types/node-fetch": "^2.1.4",
    "@types/puppeteer": "^1.10.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.9",
    "@types/react-test-renderer": "^16.0.3",
    "@types/serve-static": "^1.13.2",
    "@types/styled-components": "^4.0.3",
    "@types/tiny-async-pool": "^1.0.0",
    "@types/yargs": "^12.0.1",
    "babel-core": "7.0.0-bridge.0",
    "codecov": "^3.1.0",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "http-proxy-middleware": "^0.19.0",
    "jest": "^23.6",
    "jest-image-snapshot": "^2.7.0",
    "jest-puppeteer": "^3.5.1",
    "jest-styled-components": "^6.3.1",
    "lighthouse": "^4.0.0-alpha.2-3.2.1",
    "node-fetch": "^2.3.0",
    "pify": "^4.0.1",
    "portfinder": "^1.0.19",
    "puppeteer": "^1.10.0",
    "react-test-renderer": "^16.6.1",
    "serve-static": "^1.13.2",
    "tiny-async-pool": "^1.0.4",
    "tslint": "^5.11.0",
    "yargs": "^12.0.2"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/setup.ts",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "testRegex": "(\\.|/)(browser|prerender)?spec\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/react-scripts/config/jest/babelTransform.js"
    },
    "collectCoverageFrom": [
      "src/{app,helpers}/**/*.{ts,tsx}"
    ]
  }
}
