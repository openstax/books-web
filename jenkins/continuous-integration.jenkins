pipeline {
  agent { label 'docker' }
  stages {
    stage('Build') {
      steps {
        sh "docker build -t openstax/rex-web ."
        sh 'docker run -d --name=$BUILD_TAG openstax/rex-web cat'
      }
    }
    stage('Test') {
      steps {
        sh 'docker exec -e CI=true $BUILD_TAG yarn test'
      }
      post {
        always {
          sh 'docker stop $BUILD_TAG'
          sh '''
            for file in `docker container diff $BUILD_TAG | grep "__image_snapshots__/__diff_output__/" | sed -e "s/A //"`
            do
              docker cp $BUILD_TAG:$file .
            done
          '''
          archiveArtifacts artifacts: '**/__diff_output__/*.png', fingerprint: true
        }
      }
    }
  }
}
